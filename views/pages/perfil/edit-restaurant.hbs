
<div class="container">
    <div class="row sections">
        <div class="col-md-6" id="tab1">
            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <h1>Editar restaurante</h1>
                    <hr>
                    <form action="/publicacion/restaurante/editar/{{id}}" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Nombre del restaurante</label>
                            <input type="text" class="form-control" id="username" name="name" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <label for="ubication">Ubicación</label>
                            <input type="text" class="form-control" id="location" name="ubication" value="{{ubication}}">
                        </div>
                        <div class="form-group">
                            <label for="description">descripcion</label>
                            <textarea class="form-control" id="msn" rows="3" placeholder="Descripcion del restaurante"
                                name="description">{{description}}</textarea>
                        </div>
                        <div class="form-row">
                        
                            <div class="col">
                        
                                <div class="form-group">
                                    <label for="latitude">Latitud</label>
                                    <input name="latitude" type="text" class="form-control" id="latitude" value="location">
                                </div>
                        
                            </div>
                            <div class="col">
                        
                                <div class="form-group">
                                    <label for="longitude">Longitud</label>
                                    <input name="longitude" type="text" class="form-control" id="longitude">
                                </div>
                            </div>
                        </div>
                        <label for="cuisine">Cuisine</label>
                        <select class="form-control" id="cuisine" name="cuisine">
                            <option value="spanish">Española</option>
                            <option value="french">Francesa</option>
                            <option value="italian">Italiana</option>
                            <option value="marroqui">Marroqui</option>
                            <option value="american">Americana</option>
                        </select>
                        <div class="form-group">
                            <label for="image">Imagen</label>
                            <input type="file" class="form-control-file" id="image" name="image" value="{{image}}">
                        </div>
                        <button type="submit" class="btn btn-dark btn-block">Subir</button>
                        {{#if errorMessage}}
                        <div id="error">
                            <p>{{errorMessage}}</p>
                        </div>
                        {{/if}}
                  </form>
             </div>
        </div>
     </div>
</div>
                    
