<div class="add-form-section">
    <div class="container">
        <div class="wrap ">
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left restaurant" type="button"
                                data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                                aria-controls="collapseOne">
                                Añadir Restaurante
                            </button>
                        </h2>
                    </div>
                    <div class="row sections">
                        <div class="col-md-6" id="tab1">
                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                data-parent="#accordionExample">
                                <div class="card-body">
                                    <h1>Añadir restaurante</h1>
                                    <hr>
                                    <form action="/restaurante/crear" method="POST" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label for="name">Nombre del restaurante</label>
                                            <input type="text" class="form-control" id="username" name="name">
                                        </div>
                                        <div class="form-group">
                                            <label for="location">Ubicación</label>
                                            <input type="text" class="form-control" id="location" name="location">
                                        </div>
                                        <div class="form-group">
                                            <label for="description">descripcion</label>
                                            <textarea class="form-control" id="msn" rows="3"
                                                placeholder="Descripcion del restaurante" name="description"></textarea>
                                        </div>
                                        <label for="cuisine">Cuisine</label>
                                        <select class="form-control" id="cuisine" name="cuisine">
                                            <option value="spanish">Española</option>
                                            <option value="french">Francesa</option>
                                            <option value="italian">Italiana</option>
                                            <option value="marroqui">Marroqui</option>
                                            <option value="american">Americana</option>
                                        </select>
                                        <div class="form-group">
                                            <label for="image">Imagen</label>
                                            <input type="file" class="form-control-file" id="image" name="image">
                                        </div>
                                        <button type="submit" class="btn btn-dark btn-block">Subir</button>
                                        {{#if errorMessage}}
                                        <div id="error">
                                            <p>{{errorMessage}}</p>
                                        </div>
                                        {{/if}}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
